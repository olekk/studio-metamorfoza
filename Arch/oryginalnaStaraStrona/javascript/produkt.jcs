              $("#wynik_" + $('#wgrywane').val()).html(dane[1]);
              $("#pole_txt_" + TylkoLiczba( $('#wgrywane').val() )).val(dane[2]);
            } else {
              $("#wynik_" + $('#wgrywane').val()).html('<b class="blad">' + dane[0] + '</b>');
              $("#pole_txt_" + TylkoLiczba( $('#wgrywane').val() )).val('');
          }
          $('#wgrywane').val('');
        });
      
      }

    });    
    
